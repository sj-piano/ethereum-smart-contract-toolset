{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./build",
    "paths": {
      "#root/*": ["*"],
      "#lib/*": ["lib/*"],
      "#src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "./",
    "strict": true,
    "target": "es2022"
  },
  "exclude": ["node_modules", "build"],
  "files": ["hardhat.config.ts", "src/types/custom.d.ts"],
  "include": [
    "./*.ts",
    "./lib/**/*",
    "./scripts/**/*",
    "./src/**/*",
    "./test/**/*",
    "./typechain-types"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
