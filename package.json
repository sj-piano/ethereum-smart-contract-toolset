{
  "name": "ethereum-smart-contract-toolset",
  "version": "1.0.0",
  "description": "A collection of useful smart contracts, components, and management tools, written in Solidity and Typescript.",
  "license": "AGPL-3.0-only",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean-build": "rm -rf build && pnpm run build",
    "test": "pnpm exec hardhat test --typecheck",
    "clean": "rm -rf node_modules && rm -f package-lock.json",
    "reset": "rm -rf artifacts build cache && pnpm run clean && pnpm install && pnpm exec hardhat compile",
    "lint": "eslint --ext .ts .",
    "lint-contracts": "solhint 'contracts/**/*.sol'"
  },
  "author": {
    "name": "StJohn Piano",
    "linkedin": "https://www.linkedin.com/in/stjohnpiano",
    "tela": "http://www.tela.app/magic/stjohn_piano/ea344e"
  },
  "_moduleAliases": {
    "#root": "./build",
    "#lib": "./build/lib",
    "#src": "./build/src"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.9.2",
    "@openzeppelin/contracts-upgradeable": "4.9.2",
    "avj": "0.0.0",
    "axios": "1.4.0",
    "big.js": "6.2.1",
    "commander": "11.0.0",
    "dotenv": "16.2.0",
    "ethers": "6.6.0",
    "joi": "17.9.2",
    "lodash": "4.17.21",
    "module-alias": "2.2.3",
    "winston": "3.9.0",
    "winston-daily-rotate-file": "4.7.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "3.0.0",
    "@openzeppelin/hardhat-upgrades": "2.0.1",
    "@types/big.js": "6.1.6",
    "@types/chai": "4.3.5",
    "@types/lodash": "4.14.195",
    "@types/mocha": "10.0.1",
    "@types/module-alias": "2.0.1",
    "@types/node": "20.3.3",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "chai": "4.3.7",
    "eslint": "8.45.0",
    "hardhat": "2.18.1",
    "mocha": "10.2.0",
    "solhint": "3.4.1",
    "ts-mocha": "10.0.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.6"
  },
  "type": "commonjs"
}
